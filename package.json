{
  "name": "uby-agendamentos",
  "version": "1.0.5",
  "description": "Sistema profissional de gestÃ£o de agendamentos para Windows 10 e 11",
  "main": "app/main.js",
  "author": "L34NDR0-DEV",
  "license": "MIT",
  "os": [
    "win32"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "agendamentos",
    "windows",
    "electron",
    "gestao",
    "windows10",
    "windows11"
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.0.0",
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.uby.agendamentos",
    "productName": "UBY Agendamentos",
    "directories": {
      "output": "dist"
    },
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "files": [
      "app/**/*",
      "src/**/*",
      "assets/**/*",
      "data/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "L34NDR0-DEV",
      "repo": "UBY--Sistemas-Agendamento-1.0.0"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "UBY Agendamentos"
    }
  }
}
